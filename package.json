{
  "name": "nuxt-cron",
  "type": "module",
  "version": "1.5.1",
  "description": "A Nuxt module for cron jobs in your app.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hywax/nuxt-cron.git"
  },
  "exports": {
    ".": {
      "types": "./dist/types.d.ts",
      "import": "./dist/module.mjs",
      "require": "./dist/module.cjs"
    }
  },
  "main": "./dist/module.cjs",
  "types": "./dist/types.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "prepack": "nuxt-module-build build",
    "dev": "nuxi dev playground",
    "dev:build": "nuxi build playground",
    "dev:prepare": "nuxt-module-build build --stub && nuxt-module-build prepare && nuxi prepare playground",
    "release": "yarn lint && yarn prepack && changelogen --release --push && npm publish",
    "typecheck": "nuxi typecheck",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "dependencies": {
    "@nuxt/kit": "^3.11.2",
    "cron": "^3.1.7",
    "fast-glob": "^3.3.2"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.14.0",
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@hywax/vitepress-yandex-metrika": "^0.3.4",
    "@nuxt/devtools": "^1.1.5",
    "@nuxt/eslint-config": "^0.3.7",
    "@nuxt/module-builder": "^0.5.5",
    "@nuxt/schema": "^3.11.2",
    "@nuxt/test-utils": "^3.12.1",
    "@types/node": "^20.12.7",
    "changelogen": "^0.5.5",
    "eslint": "^9.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nuxt": "^3.11.2",
    "typescript": "^5.4.5",
    "vitepress": "^1.1.0",
    "vitest": "^1.5.0",
    "vue-tsc": "^2.0.13"
  },
  "lint-staged": {
    "*": "yarn lint:fix"
  }
}